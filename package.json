  "bugs": {
    "url": "https://github.com/vedicscriptures/bhagavad-gita-api/issues"
  },
  "dependencies": {
    "body-parser": "1.19.1",
    "dotenv": "16.0.0",
    "express": "4.17.2",
    "mongoose": "5.12.14",
    "rate-limiter-flexible": "2.3.6",
    "redis": "4.0.3"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "mocha": "^9.2.2",
    "nodemon": "2.0.15",
    "prettier": "2.6.1"
  },
  "engines": {
    "node": "12.x",
    "npm": "7.x"
  }
